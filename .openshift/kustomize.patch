- op: add
  path: /objects/0/spec/template/spec/containers/0/env
  value:
    - name: PYTHONUNBUFFERED
      value: "1"
    - name: password
      valueFrom:
        secretKeyRef:
          key: password
          name: test-cicd3-sealed-secret
    - name: topicname
      valueFrom:
        configMapKeyRef:
          key: cgroup
          name: ${APP_NAME}-config-map
    - name: topicname
      valueFrom:
        configMapKeyRef:
          key: topicname
          name: ${APP_NAME}-config-map

- op: add
  path: /objects/0/spec/template/spec/containers/0/volumeMounts
  value:
    - mountPath: /mnt
      name: cm-mount

- op: add
  path: /objects/0/spec/template/spec/volumes
  value:
    - configMap:
        name: ${APP_NAME}-config-map
      name: cm-mount


